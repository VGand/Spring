<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean name="firstAuditorium" class="com.epam.spring.cinema.domain.Auditorium">
        <property name="name" value="auditorium1"/>
        <property name="numberOfSeats" value="20"/>
        <property name="vipSeats">
            <set>
                <value>1</value>
                <value>2</value>
                <value>3</value>
                <value>4</value>
                <value>5</value>
            </set>
        </property>
    </bean>

    <bean name="secondAuditorium" class="com.epam.spring.cinema.domain.Auditorium">
        <property name="name" value="auditorium2"/>
        <property name="numberOfSeats" value="30"/>
        <property name="vipSeats">
            <set>
                <value>1</value>
                <value>2</value>
                <value>3</value>
                <value>4</value>
                <value>5</value>
                <value>6</value>
                <value>7</value>
                <value>8</value>
                <value>9</value>
                <value>10</value>
            </set>
        </property>
    </bean>


    <bean name="administrator" class="com.epam.spring.cinema.domain.User">
        <constructor-arg index="0" value="${adminLogin}"/>
        <constructor-arg index="1" value="${adminRole}"/>
    </bean>

    <bean name="user" class="com.epam.spring.cinema.domain.User">
        <constructor-arg value="${userRole}"/>
    </bean>

    <bean name="userManager" class="com.epam.spring.cinema.dao.map.UserMapManager">
        <constructor-arg ref="administrator"/>
    </bean>

    <bean name="auditoriumManager" class="com.epam.spring.cinema.dao.map.AuditoriumMapManager">
        <constructor-arg>
            <list>
                <ref bean="firstAuditorium"/>
                <ref bean="secondAuditorium"/>
            </list>
        </constructor-arg>
    </bean>

    <bean name="eventManager" class="com.epam.spring.cinema.dao.map.EventMapManager"/>

    <bean name="ticketManager" class="com.epam.spring.cinema.dao.map.TicketMapManager"/>
</beans>