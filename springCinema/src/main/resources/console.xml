<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">


    <bean name="mainConsoleMenu" class="com.epam.spring.cinema.console.impl.MainConsoleMenuImpl">
        <property name="userService" ref="userService"/>
        <property name="loginService" ref="loginService"/>
        <property name="userConsoleMenu" ref="userConsoleMenu"/>
        <property name="adminConsoleMenu" ref="adminConsoleMenu"/>
    </bean>

    <bean name="userConsoleMenu" class="com.epam.spring.cinema.console.impl.UserConsoleMenu">
        <property name="eventService" ref="eventService"/>
        <property name="bookingService" ref="bookingService"/>
        <property name="userService" ref="userService"/>
    </bean>

    <bean name="adminConsoleMenu" class="com.epam.spring.cinema.console.impl.AdminConsoleMenu">
        <property name="eventService" ref="eventService"/>
        <property name="auditoriumService" ref="auditoriumService"/>
        <property name="bookingService" ref="bookingService"/>
    </bean>

</beans>