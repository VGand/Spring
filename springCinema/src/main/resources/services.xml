<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean name="auditoriumService" class="com.epam.spring.cinema.service.impl.AuditoriumServiceImpl">
        <property name="auditoriumManager" ref="auditoriumManager"/>
    </bean>

    <bean name="bookingService" class="com.epam.spring.cinema.service.impl.BookingServiceImpl">

    </bean>

    <bean name="eventService" class="com.epam.spring.cinema.service.impl.EventServiceImpl">

    </bean>

    <bean name="loginService" class="com.epam.spring.cinema.service.impl.LoginServiceImpl">
        <property name="userService" ref="userService"/>
    </bean>

    <bean name="userService" class="com.epam.spring.cinema.service.impl.UserServiceImpl">
        <property name="userManager" ref="userManager"/>
    </bean>
</beans>