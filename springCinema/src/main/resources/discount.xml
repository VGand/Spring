<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean name="birthdayStrategy" class="com.epam.spring.cinema.service.impl.discount.BirthdayStrategy">
        <property name="baseDiscount" value="30"/>
    </bean>

    <bean name="every10thTicketStrategy" class="com.epam.spring.cinema.service.impl.discount.Every10thTicketStrategy">
        <property name="baseDiscount" value="50"/>
    </bean>

    <bean name="discountService" class="com.epam.spring.cinema.service.impl.discount.DiscountServiceImpl">
        <property name="discountStrategies">
            <list>
                <ref bean="birthdayStrategy"/>
                <ref bean="every10thTicketStrategy"/>
            </list>
        </property>
    </bean>

</beans>